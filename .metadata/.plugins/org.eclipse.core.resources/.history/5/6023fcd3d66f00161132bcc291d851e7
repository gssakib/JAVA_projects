package demo;

public class CurrentTime {

	public static void main(String[] args) {
		
		double totalSeconds = (System.currentTimeMillis()) / 1000 ;
		double currentSeconds = totalSeconds % 60;
		
		double totalMinutes = totalSeconds / 60;
		double currentMinutes = totalMinutes % 60;
		
		double totalHour = totalMinutes / 60;
		double currentHour = totalHour % 60;
		
		System.out.println("The current time in GMT format is: " + currentHour + currentMinutes + currentSeconds);
		
		
		
		System.out.println(System.currentTimeMillis());
		// TODO Auto-generated method stub

	}

}
