package demo;
import javax.swing.JOptionPane;

public class TipsAndChange {

	public static void main(String[] args) {
		
		String input = JOptionPane.showInputDialog(null,"Please enter an integer:","ShowLogicErrors", JOptionPane.QUESTION_MESSAGE);
		double price = Double.parseDouble(input);
		double tip = 0.0;
		
		if(price < 30.0){
			tip = 5.0;
			
			double total = price + tip;
			System.out.println("The total amount to be paid is: " + total);
			
			
			String input_2 = JOptionPane.showInputDialog(null,"Please enter the amount you wish to pay: ","ShowLogicErrors", JOptionPane.QUESTION_MESSAGE);
			double payment = Double.parseDouble(input_2);
			double computedChange = 0.0;
			
			if(payment > total){
				computedChange = payment - total;
			}else{
				
			String input_3 = JOptionPane.showInputDialog(null,"Please enter the amount you wish to pay: ","ShowLogicErrors", JOptionPane.QUESTION_MESSAGE);
			double payment_1 = Double.parseDouble(input_3);
			}
			
			
			}else{
			
			tip = 0.15 * price;
			double total = price + tip;
			System.out.println("The total amount to be paid is: " + total);
			
			
			String input_2 = JOptionPane.showInputDialog(null,"Please enter the amount you wish to pay: ","ShowLogicErrors", JOptionPane.QUESTION_MESSAGE);
			double payment = Double.parseDouble(input_2);
			double computedChange = 0.0;
			
			if(payment > total){
				computedChange = payment - total;
			}else{
				
			String input_3 = JOptionPane.showInputDialog(null,"Please enter the amount you wish to pay: ","ShowLogicErrors", JOptionPane.QUESTION_MESSAGE);
			double payment_2 = Double.parseDouble(input_3);
			}
			
			
		}
		
		
		
		
		
		// TODO Auto-generated method stub

	}

}
