package demo;

public class pyramid {

	public static void main(String[] args) {
		
		Pyramid(9, '#');
		
	}
	
	public static void Pyramid(int base, char sym){
		int space ;
		for(int j = 1; j < base; j+=2){
			space = (j-1);
			for(int k = 0; k< space; k++){
				System.out.print(' ');
			}
			
			for(int i = 0; i < (base - j); i++){
				
				System.out.print(sym);
			}
			System.out.println();
		}
		
		
		
		
	}

}
