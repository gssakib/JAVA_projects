package demo;
import java.util.Scanner;


public class TaxCalculator {

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		System.out.println("The filing statuses are: (0-single filer, 1-married jointly or "
				+ "qualifying widow(er),2-married separately, 3-head of household)");
		System.out.print("Enter the number associated with the filing status: ");
		double status = in.nextDouble();
		
		System.out.print("Enter taxable income: ");
		double taxIncome = in.nextDouble();
		double taxAmount = 0;
		
		if(status == 0 ){
			if(status <= 8350){
				taxAmount = 	status * (0.1);
				
				
			}else if(status <= 33950){
				taxAmount = 	(status - 8350) * (0.15) + 8350 * 0.1 ;
				
				
			}else if(status <= 82250){
				taxAmount = 	(status - 33950) * (0.25) + 25599 * .15 + 8350 * 0.1 ;
				
			}else if(status <= 171550){
				taxAmount = 	(status - 82250) * (0.28) + 48299 * (.25) + 25599 * .15 + 8350 * 0.1 ;
				
			}else if(status <= 372950){
				taxAmount = 	(status - 171551 ) * .33 + (89299) * (0.28) + 48299 * (.25) + 25599 * .15 + 8350 * 0.1 ;
				
			}else{
				taxAmount = 	(status - 372951) * .35 + (201399) * .33 + (89299) * (0.28) + 48299 * (.25) + 25599 * .15 + 8350 * 0.1 ;
				
			}
		}else if(status == 1 ){
			if(status <= 16700){
				taxAmount = taxIncome * (1.1);
				
			}else if(status <= 67900){
				taxAmount = taxIncome * (1.15);
				
			}else if(status <= 137050){
				taxAmount = taxIncome * (1.25);
				
			}else if(status <= 208850){
				taxAmount = taxIncome * (1.28);
				
			}else if(status <= 372950){
				taxAmount = taxIncome * (1.33);
				
			}else{
				taxAmount = taxIncome * (1.35);
				
			}
		}else if(status == 2 ){
			if(status <= 8350){
				taxAmount = taxIncome * (1.1);
				
			}else if(status <= 33950){
				taxAmount = taxIncome * (1.15);
				
			}else if(status <= 68525){
				taxAmount = taxIncome * (1.25);
				
			}else if(status <= 104425){
				taxAmount = taxIncome * (1.28);
				
			}else if(status <= 186475){
				taxAmount = taxIncome * (1.33);
				
			}else{
				taxAmount = taxIncome * (1.35);
				
			}
		}else if(status == 3 ){
			if(status <= 11950){
				taxAmount = taxIncome * (1.1);
				
			}else if(status <= 45500){
				taxAmount = taxIncome * (1.15);
				
			}else if(status <= 117450){
				taxAmount = taxIncome * (1.25);
				
			}else if(status <= 190200){
				taxAmount = taxIncome * (1.28);
				
			}else if(status <= 372950){
				taxAmount = taxIncome * (1.33);
				
			}else{
				taxAmount = taxIncome * (1.35);
				
			}
		}else{
			System.out.println("Invalid Input.Please try again.");
		}
		
	}
	

}
